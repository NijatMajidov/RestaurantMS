    <link rel="stylesheet" href="~/manage/css/styles.css" />
    <!-- Template Base Styles End -->

    <link rel="stylesheet" href="~/manage/css/main.css" />
    <script src="~/manage/js/base/loader.js"></script>
</head>

<body>
    <div id="root">
        <main>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h2>Create Reservation</h2>

                        @if (tables == null || !tables.Any())
                        {
                            <p>No active tables available for reservation.</p>
                        }
                        else
                        {
                            <form asp-action="Create" method="post">
                                <div class="form-group">
                                    <label for="TableId">Table</label>
                                    <select id="TableId" asp-for="TableId" class="form-control">
                                        <option value="">Select Table</option>
                                        @foreach (var table in tables)
                                        {
                                            <option value="@table.Id">
                                                @table.Name
                                                @if (!string.IsNullOrEmpty(table.ImageUrl))
                                                {
                                                    <img src="~/uploads/Tables/@table.ImageUrl" alt="@table.Name" style="max-width: 100px; max-height: 100px;" />
                                                }
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone"></label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ReservDate"></label>
                                    <input asp-for="ReservDate" type="date" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ReservTime"></label>
                                    <input asp-for="ReservTime" type="time" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="GuestCount"></label>
                                    <input asp-for="GuestCount" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-primary">Reserve</button>
                            </form>
                        }

                    </div>
                </div>
            </div>
        </main>
        <!-- Layout Footer Start -->
        <footer>
            <div class="footer-content text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <p>Odyssey Restaurant | 2024</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Layout Footer End -->
    </div>
    <!-- Vendor Scripts Start -->
    <script src="~/manage/js/vendor/jquery-3.5.1.min.js"></script>
