@model List<ReservGetDto>

@{
    int count = 1;
}
<main>
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- Title Start -->
                <section class="scroll-section" id="title">
                    <div class="page-title-container">
                        <h1 class="mb-0 pb-0 display-4">Reservations</h1>
                        <nav class="breadcrumb-container d-inline-block" aria-label="breadcrumb">
                            <ul class="breadcrumb pt-0">
                                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Reservation" asp-action="Index">Reservation</a></li>
                                <li class="breadcrumb-item"><a>Index</a></li>
                            </ul>
                        </nav>
                    </div>
                </section>
                <!-- Title End -->
                <!-- Content Start -->
                <div>
                    @* <div class="card mb-5">
                        <div class="card-body">
                            <p class="mb-0">Examples for opt-in styling of tables (given their prevalent use in JavaScript plugins) with Bootstrap.</p>
                        </div>
                    </div>
 *@
                    <!-- Basic Start -->
                    <section class="scroll-section" id="basic">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="small-title">Categories</h2>
                            <a class="btn btn-primary" asp-action="Create">Create</a>
                        </div>
                        <div class="card mb-5">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered text-center">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Id</th>
                                                <th scope="col">Name Surname</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Phone</th>
                                                <th scope="col">Guest Counts</th>
                                                <th scope="col">Table</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>@item.Id</td>
                                                    <td>@item.FirstName @item.LastName</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.GuestCount</td>
                                                    <td>@item.TableId</td>
                                                    <td>
                                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                    </td>
                                                </tr>
                                                count++;
                                            }
                                        </tbody>
                                    </table>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <!-- Content End -->
            </div>
        </div>
    </div>
</main>