<body>
    <div id="root">
        <main>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h2>Update Reservation</h2>
                        <section class="scroll-section" id="formRow">
                            <h2 class="small-title">Update Form</h2>
                            <div class="card mb-5">
                                <div class="card-body">
                                    <form asp-action="Update" method="post" class="row g-3">
                                        <input type="hidden" asp-for="Id" />
                                        <div class="col-md-6">
                                            <label asp-for="NumberOfGuests" class="form-label">Number Of Guests</label>
                                            <input asp-for="NumberOfGuests" class="form-control" />
                                            <span asp-validation-for="NumberOfGuests" style="color:red"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="ReservationDate" class="form-label">Reservation Date</label>
                                            <input asp-for="ReservationDate" type="date" class="form-control" />
                                            <span asp-validation-for="ReservationDate" style="color:red"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="ReservationTime" class="form-label">Reservation Time</label>
                                            <input asp-for="ReservationTime" type="time" class="form-control" />
                                            <span asp-validation-for="ReservationTime" style="color:red"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Note" class="form-label">Note</label>
                                            <input asp-for="Note" class="form-control" />
                                            <span asp-validation-for="Note" style="color:red"></span>
                                        </div>
                                        <div asp-validation-summary="ModelOnly"></div>
                                        <button type="submit" class="btn btn-primary">Next</button>
                                    </form>
                                </div>
                            </div>
                        </section>
