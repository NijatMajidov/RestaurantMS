@model AppUser
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-auto">
                <h2 >User info</h2>
                <section>
      
                            <div class="col-md-6">
                                <div class="card mx-auto" style="width: 32rem; height: 32rem">
                                    <img class="card-img-top" src="~/uploads/team/@Model.ImageUrl" width="100" height="300" alt="User Photo">
                                    <div class="card-body">
                                        <h5 class="card-title">@Model.Name @Model.Surname</h5>
                                        <h6 class="card-title">Email: @Model.Email </h6>
                                        <h6 class="card-title">UserName: @Model.UserName </h6>
                                        <p class="card-text">@Model.Biography</p>
                                    </div>
                                    
                                </div>
                            </div>
                        
                </section>
            </div>
        </div>
    </div>
</main>
