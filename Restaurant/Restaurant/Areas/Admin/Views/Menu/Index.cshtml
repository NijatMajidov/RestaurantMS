@model IEnumerable<RMS.Core.Entities.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
    int count = 1;
}

<main>
    <div class="container">
        <div class="row">
            <div class="col">
                <section class="scroll-section" id="title">
                    <div class="page-title-container">
                        <h1 class="mb-0 pb-0 display-4">Menu Items</h1>
                        <nav class="breadcrumb-container d-inline-block" aria-label="breadcrumb">
                            <ul class="breadcrumb pt-0">
                                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Menu" asp-action="Index">Menu</a></li>
                            </ul>
                        </nav>
                    </div>
                </section>
                <div>
                    <section class="scroll-section" id="basic">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="small-title">Menu Items</h2>
                            <a class="btn btn-primary" asp-action="Create">Create</a>
                        </div>
                        <div class="card mb-5">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered text-center">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Category</th>
                                                <th scope="col">Image</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>@item.Name</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Price</td>
                                                    <td>@item.CategoryId</td>
                                                    <td>
                                                        <img src="~/uploads/menu/@item.ImageUrl" width="100" height="100" alt="Image" />
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                    </td>
                                                </tr>
                                                count++;
                                            }
                                        </tbody>
                                    </table>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>